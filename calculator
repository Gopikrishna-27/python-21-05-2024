def addition(a, b):
    return a + b

def subtraction(a, b):
    return a - b

def multiplication(a, b):
    return a * b

def division(a, b):
    return a / b if b != 0 else "Division by zero error"

def modulus(a, b):
    return a % b

def average(a, b):
    return (a + b) / 2

def power(a, b):
    return a ** b

operations = {
    1: (addition, "Sum"),
    2: (subtraction, "Difference"),
    3: (multiplication, "Product"),
    4: (division, "Quotient"),
    5: (modulus, "Modulus"),
    6: (average, "Average"),
    7: (power, "Power"),
}

a = int(input("Enter the first number: "))
b = int(input("Enter the second number: "))

option = int(input("Enter your option (1-7): "))

if option in operations:
    operation, label = operations[option]
    result = operation(a, b)
    if isinstance(result, float):
        print(f"{label} = {result:.2f}")
    else:
        print(f"{label} = {result}")
else:
    print("Invalid option")
